<% provide(:title, 'Chapter') %>
<% provide(:new, 'chapters/new') %>
<h1>Listing Chapter</h1>

<table border=1>
  <tr>
    <th>Name</th>
    <th>Act</th>
    
  </tr>

<% @chapters.each do |chapter| %>
  <tr>
    <td><%= chapter.name %></td>
    <td><%= chapter.act.name rescue "Act Deleted " %></td>
    <td><%= link_to 'Show', chapter %></td>
    <td><%= link_to 'Edit', edit_chapter_path(chapter) %></td>
    <td><%= link_to 'Destroy', chapter, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New chapter', new_chapter_path %>
