<% provide(:title, 'Act') %>
<% provide(:new, 'acts/new') %>
<h1>Listing Acts</h1>

<table border=1 >
  <tr>
    <th>Name</th>
   
  </tr>

<% @acts.each do |act| %>
  <tr>
    <td><%= act.name %></td>
    <td><%= link_to 'Edit', edit_act_path(act) %></td>
    <td><%= link_to 'Destroy', act, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New act', new_act_path %>
